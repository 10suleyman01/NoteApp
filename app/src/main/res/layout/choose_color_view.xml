<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvChooseColor"
        android:text="@string/select_color"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:alignItems="center"
        app:justifyContent="space_between"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_shape_red" />

        <View
            android:id="@+id/orange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_shape_orange" />

        <View
            android:id="@+id/yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_shape_yellow" />

        <View
            android:id="@+id/cyan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_shape_cyan" />

        <View
            android:id="@+id/pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_shape_pink" />

    </com.google.android.flexbox.FlexboxLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        style="@style/NoteApp.Button"
        android:text="@string/save" />

</androidx.appcompat.widget.LinearLayoutCompat>
